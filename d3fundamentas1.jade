extend layout

block content

	h3 SVG bar

	svg 
		rect(width="50", height="200", style="fill:blue")			


	h3 D3 Bar
	script. 
		d3.select('body').append('svg') // add svg to body
			.append('rect')								// add rect then set attributes
				.attr('width',50)
				.attr('height',200)
				.style('fill','blue')

	h3 
		Circle
	svg(width='50',height='50')
		circle(cx='25',cy='25',r='25',style='fill: blue')
	script.
		d3.select('body')
			.append('svg')
				.attr('width',50)
				.attr('height',50)
			.append('circle')
				.attr('cx',25)
				.attr('cy',25)
				.attr('r',25)
				.style('fill','purple')
				

	svg(width='250',height='50')
		text(x=0,y=25)
			p Easy 

	script.
		d3.select('body')
			.append('svg')
				.attr('width',250)
				.attr('height',50)
			.append('text')
				.text('Easy Peasy')
				.attr('y',25)
				.attr('x',0)
				.style('fill','blue')

	script.
		var w = 300;
		var h = 100;
		var padding = 2;
		var dataset = [5,10,15,20,25,30];

		var svg = d3.select('body').append('svg').attr('width',w).attr('height',h);
		svg.selectAll('rect').data(dataset).enter()
				.append('rect')
				.attr('x', function(d, i){
						return (i * (w/dataset.length));	
					})
				.attr('y', function(d){
					return h-(d*4);})
			.attr('width', w / dataset.length - padding)
			.attr('height',function(d){
						return d*4;
					});	
	script.
		var svg = d3.select('body').append('svg').attr('width',w).attr('height',200);
		svg.append('circle').attr('cx',30).attr('cy',30).attr('r',30).style('fill','red');
